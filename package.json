{
  "name": "archiver",
  "version": "1.0.0",
  "description": "Node script to upload bookmarked media to S3 or B2. Runs daily via cron on a GitHub Action.",
  "main": "dist/archive-bookmarks.js",
  "scripts": {
    "archive:bookmarks": "node dist/archive-bookmarks.js",
    "archive:tweets": "node dist/archive-tweets.js",
    "build:archive:bookmarks": "tsup src/archive-bookmarks.ts --env.NODE_ENV production --minify",
    "build:archive:tweets": "tsup src/archive-tweets.ts --env.NODE_ENV production --minify",
    "build:dev": "tsup src/archive-bookmarks.ts",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fourjuaneight/archiver.git"
  },
  "author": "Juan Villela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourjuaneight/archiver/issues"
  },
  "homepage": "https://github.com/fourjuaneight/archiver#readme",
  "dependencies": {
    "@mozilla/readability": "^0.4.1",
    "aws-sdk": "^2.875.0",
    "canvas": "^2.7.0",
    "chalk": "^4.1.0",
    "date-fns": "^2.21.1",
    "dotenv": "^8.2.0",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "^16.5.2",
    "turndown": "^7.0.0",
    "uuid": "^3.3.2",
    "ytdl-core": "^4.5.0"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jsdom": "^16.2.10",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.10",
    "@types/turndown": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsup": "^4.8.21",
    "typescript": "^4.2.4"
  },
  "browser": {
    "crypto": false
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
